<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:id="@+id/parent_layout_item_owed"
    android:background="@color/colorPrimary"
    >

<RelativeLayout
    android:id="@+id/parent_layout_item_summary"
    android:layout_width="595dp"
    android:layout_height="56dp"
    android:layout_weight="45">

    <TextView
        android:id="@+id/item_name_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Item Name"
        android:textSize="20dp"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/original_price_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"

        android:layout_toEndOf="@+id/item_name_view"
        android:text="Original $Price"
        android:textStyle="italic"
        android:textSize="20dp"
        android:gravity="center"


        />

    <TextView
        android:id="@+id/owed_price_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/original_price_view"
        android:gravity="center"


        android:text="Amount Owed"
        android:textSize="20dp" />



</RelativeLayout>







</LinearLayout>