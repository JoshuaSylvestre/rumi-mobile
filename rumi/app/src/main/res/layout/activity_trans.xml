<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poop.rumi.rumi.TransactionActivity"

    android:orientation="vertical"
    android:background="#feef"

    >

    <RelativeLayout
        android:id="@+id/topPanelButtons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#feef"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="@drawable/button_bg_transparent"

            />

        <TextView
            android:id="@+id/store_restaurant"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/button_back"
            android:layout_alignBottom="@+id/button_back"


            android:layout_gravity="fill_horizontal"
            android:layout_toEndOf="@+id/button_back"
            android:layout_toStartOf="@+id/button_next"
            android:gravity="center"
            android:hint="Store/Restaurant"

            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Next"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="@drawable/button_transparent_no_corners"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"


        >

        <ListView
            android:id="@+id/vertical_list_item_price_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


        </ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"

            >

            <Button
                android:id="@+id/button_add_more_item_price"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:text="+Add an item"
                android:textStyle="italic"
                android:background="@drawable/button_bg_transparent"


                />

            <!--<Button-->
            <!--android:id="@+id/button_select_all"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginStart="13dp"-->

            <!--android:text="Select All"-->
            <!--android:textStyle="italic" />-->

            <!--<Button-->
            <!--android:id="@+id/button_clear_all"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_marginEnd="18dp"-->
            <!--android:text="Clear All"-->
            <!--android:textStyle="italic"-->

            <!--/>-->

        </RelativeLayout>


    </LinearLayout>



    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        />

    <LinearLayout
        android:id="@+id/linear_layout_add_splitters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="#feef"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/button_add_person"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"


            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="0dp"
            android:background="@drawable/button_bg_transparent"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

            />

    </LinearLayout>




</LinearLayout>





